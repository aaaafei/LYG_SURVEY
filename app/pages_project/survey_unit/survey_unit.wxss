/* pages_project/survey_unit/survey_unit.wxss */
page {
    background-color: #fff;
  }
  
  page .round-image {
    border-radius: 12rpx;
  }

  .top-wrapper {
    height: 25vh;
  }
  
  .side-bar-wrapper {
    display: flex;
    height: 75vh;
    overflow: hidden;
  }
  
  .side-bar-wrapper .content {
    flex: 1;
    transition: transform 0.3s ease;
  }
  
  .side-bar-wrapper .section {
    padding: 32rpx 0;
    box-sizing: border-box;
    height: 100%;
  }
  
  .side-bar-wrapper .title {
    padding-left: 40rpx;
    margin-bottom: 8rpx;
  }
  
  .side-bar-wrapper .image {
    width: 96rpx;
    height: 96rpx;
    border: 2rpx solid #e7e7e7;
  }

  .btn-wrapper {
    height: 100%;
  }
  
  .view-btn {
    background-color: #f0c94b;
  }
  
  .btn {
    display: inline-flex;
    justify-content: center;
    align-items: center;
    width: 120rpx;
    height: 100%;
    color: white;
  }
  
  .delete-btn {
    background-color: #e34d59;
  }
  
  .edit-btn {
    background-color: #0052d9;
  }
  
  .favor-btn {
    background-color: #0052d9;
  }
  
  